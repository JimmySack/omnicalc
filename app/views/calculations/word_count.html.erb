<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Word Count Results</h3>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>
        Text
      </dt>
      <dd data-grade="text">
        <%= simple_format(@text) %>
      </dd>

      <dt>
        Word Count
      </dt>
      <dd data-grade="word_count">
        <%= @word_count %>
      </dd>

      <dt>
        Character Count (with spaces)
      </dt>
      <dd data-grade="character_count_with_spaces">
        <%= @character_count_with_spaces %>
      </dd>

      <dt>
        Character Count (without spaces)
      </dt>
      <dd data-grade="character_count_without_spaces">
        <%= @character_count_without_spaces %>
      </dd>

      <dt>
        Occurrences of <code><%= @special_word %></code>
      </dt>
      <dd data-grade="occurrences">
        <%= @occurrences %>
      </dd>
    </dl>
  </div>
</div>
